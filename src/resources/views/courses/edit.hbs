<div class="mt-4">
  <h3>Cập nhật khóa học</h3>

  <form class="mt-4" method="POST" action="/courses/store">
    <div class="form-group">
      <input type="text" class="form-control" value="{{course.name}}" id="name" name="name" placeholder="Tên khóa học">
    </div>
    <div class="form-group">
      <textarea class="form-control" id="description" name="description" placeholder="Mô tả khóa học">{{course.description}}</textarea>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" value="{{course.image}}" id="image" name="image" placeholder="img address">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId" placeholder="id video">
    </div>
    <button type="submit" class="btn btn-primary">Lưu lại</button>
  </form>
</div>